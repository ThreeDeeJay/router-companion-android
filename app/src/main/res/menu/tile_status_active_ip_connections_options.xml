<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Search, should appear as action button -->
    <item
        android:id="@+id/tile_status_active_ip_connections_search"
        android:icon="@drawable/ic_search_white_24dp"
        android:orderInCategory="1"
        android:title="@string/action_search"
        android:visible="false"
        app:actionViewClass="android.support.v7.widget.SearchView"
        app:showAsAction="collapseActionView|ifRoom" />

    <item
        android:id="@+id/tile_status_active_ip_connections_stats"
        android:icon="@drawable/ic_action_action_trending_up"
        android:orderInCategory="2"
        android:title="@string/stats"
        android:visible="false"
        app:showAsAction="never">
        <menu>
            <item
                android:id="@+id/tile_status_active_ip_connections_stats_by_source_ip"
                android:orderInCategory="1"
                android:title="@string/by_source"
                app:showAsAction="never" />
            <item
                android:id="@+id/tile_status_active_ip_connections_stats_by_destination_ip"
                android:orderInCategory="2"
                android:title="By Destination IP"
                app:showAsAction="never" />

            <item
                android:id="@+id/tile_status_active_ip_connections_stats_by_destination_country"
                android:orderInCategory="3"
                android:title="By Destination IP Country"
                app:showAsAction="never" />
        </menu>

    </item>

    <item
        android:id="@+id/tile_status_active_ip_connections_share"
        android:enabled="true"
        android:icon="@drawable/ic_share_white_24dp"
        android:orderInCategory="3"
        android:title="@string/share"
        app:actionProviderClass="android.support.v7.widget.ShareActionProvider"
        app:showAsAction="never" />

</menu>