<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/tile_admin_nvram_add_notification_viewgroup"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scrollbars="none"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        >

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          android:layout_marginTop="4dp"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tile_admin_nvram_add_key"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@android:color/holo_blue_dark"
            android:hint="@string/nvram_variable_key"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:selectAllOnFocus="true"
            >
          <requestFocus/>
        </android.support.design.widget.TextInputEditText>
      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          android:layout_marginTop="4dp"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tile_admin_nvram_add_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@android:color/holo_blue_dark"
            android:hint="@string/nvram_var_value"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:selectAllOnFocus="true"
            />
      </android.support.design.widget.TextInputLayout>

    </LinearLayout>

  </ScrollView>

</LinearLayout>