<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_status_lan_dhcp_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/tile_status_lan_dhcp_status_hdr"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingTop="4.0dip"
      >

    <TextView
        android:id="@+id/tile_status_lan_dhcp_status_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/dhcp_status"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textIsSelectable="true"
        android:textStyle="bold"
        />

  </LinearLayout>

  <ProgressBar
      android:id="@+id/tile_progress_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8.0dip"
      android:layout_marginTop="8.0dip"
      android:indeterminate="false"
      android:indeterminateOnly="false"
      style="?android:attr/progressBarStyleHorizontal"
      />

  <!-- Error message placeholder -->
  <TextView
      android:id="@+id/tile_status_lan_dhcp_status_error"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:ellipsize="end"
      android:gravity="center"
      android:maxLines="1"
      android:text="@string/error_placeholder"
      android:textColor="@color/ddwrt_purple"
      android:textIsSelectable="true"
      android:textStyle="bold"
      android:visibility="gone"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <GridLayout
        android:id="@+id/tile_status_lan_dhcp_status_gridLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:visibility="gone"
        >

      <!-- Server Status -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8.0dip"
          android:layout_marginRight="8.0dip"
          android:text="@string/dhcp_server"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/tile_status_lan_dhcp_status_server"
          android:layout_width="0dip"
          android:layout_gravity="fill_horizontal"
          android:text="@string/loading"
          android:textIsSelectable="true"
          />

      <!-- Daemon -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8.0dip"
          android:layout_marginRight="8.0dip"
          android:text="@string/dhcp_daemon"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/tile_status_lan_dhcp_status_daemon"
          android:layout_width="0dip"
          android:layout_gravity="fill_horizontal"
          android:text="@string/loading"
          android:textIsSelectable="true"
          />

      <!-- Start IP Address -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8.0dip"
          android:layout_marginRight="8.0dip"
          android:text="@string/dhcp_start_ip"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/tile_status_lan_dhcp_status_start_ip"
          android:layout_width="0dip"
          android:layout_gravity="fill_horizontal"
          android:text="@string/loading"
          android:textIsSelectable="true"
          />

      <!-- End IP -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8.0dip"
          android:layout_marginRight="8.0dip"
          android:text="@string/dhcp_end_ip"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/tile_status_lan_dhcp_status_end_ip"
          android:layout_width="0dip"
          android:layout_gravity="fill_horizontal"
          android:text="@string/loading"
          android:textIsSelectable="true"
          />


      <!-- Lease Time -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8.0dip"
          android:layout_marginRight="8.0dip"
          android:text="@string/client_lease_time"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/tile_status_lan_dhcp_status_client_lease_time"
          android:layout_width="0dip"
          android:layout_gravity="fill_horizontal"
          android:text="@string/loading"
          android:textIsSelectable="true"
          />

    </GridLayout>

    <ProgressBar
        android:id="@+id/tile_status_lan_dhcp_status_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/tile_last_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tile_status_lan_dhcp_status_gridLayout"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text="@string/last_sync"
        android:textAppearance="?android:textAppearanceSmall"
        android:textIsSelectable="true"
        android:textStyle="italic"
        />

  </RelativeLayout>

</LinearLayout>