<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actions.activity.SpeedTestActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/routerSpeedTestToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/router_speedtest_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_router_management_activity" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Error message placeholder -->
            <TextView
                android:id="@+id/router_speedtest_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:layout_margin="15dp"
                android:text="@string/error_placeholder"
                android:textColor="@color/ddwrt_purple"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

            <ScrollView
                android:id="@+id/speedtest_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/router_speedtest_error"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/speedtest_wan_imageView"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/internet"
                        android:contentDescription="Internet"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/speedtest_internet_line"
                            android:layout_toStartOf="@+id/speedtest_internet_line"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/internet_dl_speed"
                                android:gravity="end|right" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/speedtest_internet_dl_speed"
                                    android:layout_centerInParent="true"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/speedtest_dl_pb_internet"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <View
                            android:id="@+id/speedtest_internet_line"
                            android:layout_width="3dp"
                            android:layout_height="100dp"
                            android:background="#ffcccccc"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerInParent="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/speedtest_internet_line"
                            android:layout_toEndOf="@+id/speedtest_internet_line"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/internet_ul_speed"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/speedtest_internet_ul_speed"
                                    android:layout_centerInParent="true" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/speedtest_ul_pb_internet"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Router -->
                    <ImageView
                        android:id="@+id/speedtest_router_imageView"
                        android:layout_width="116dp"
                        android:layout_height="67dp"
                        android:src="@drawable/router"
                        android:contentDescription="Router"
                        android:layout_gravity="center_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <View
                            android:id="@+id/speedtest_router_lan_path_vertical"
                            android:layout_width="3dp"
                            android:layout_height="100dp"
                            android:background="#ffcccccc"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerInParent="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/speedtest_router_lan_path_vertical"
                            android:layout_toEndOf="@+id/speedtest_router_lan_path_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/link_speed" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/speedtest_wifi_speed"
                                    android:layout_centerInParent="true"/>
                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/speedtest_pb_wifi"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_action_device_devices2"
                        android:contentDescription="Devices" />

                </LinearLayout>

            </ScrollView>

            <!-- Notice -->
            <TextView
                android:visibility="gone"
                android:id="@+id/router_speedtest_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="false"
                android:maxLines="2"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:layout_below="@+id/speedtest_scrollView"
                android:layout_alignParentBottom="true"
                android:background="@color/jetstream_speed_test_background"/>

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
