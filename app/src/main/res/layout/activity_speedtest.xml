<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actions.activity.SpeedTestActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/routerSpeedTestToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/router_speedtest_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_router_management_activity" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Error message placeholder -->
        <TextView
            android:id="@+id/router_speedtest_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_marginBottom="5dp"
            android:text="@string/error_placeholder"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/DarkRed"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/speedtest_server_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:singleLine="true"
                android:text="Test Server"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/speedtest_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Auto-detected"/>

                <ImageView
                    android:id="@+id/speedtest_server_country_flag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"/>

            </RelativeLayout>
        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:id="@+id/speedtest_scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/speedtest_wan_imageView"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/internet"
                        android:contentDescription="Internet"
                        android:layout_gravity="center_horizontal"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/speedtest_internet_line"
                            android:layout_toStartOf="@+id/speedtest_internet_line"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/speedtest_latency_title"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/latency"
                                android:gravity="end" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/speedtest_internet_latency"
                                    android:layout_centerInParent="true"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/speedtest_latency_pb_internet"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <View
                            android:id="@+id/speedtest_internet_line"
                            android:layout_width="3dp"
                            android:layout_height="130dp"
                            android:background="@color/network_link_color"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerInParent="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/speedtest_internet_line"
                            android:layout_toEndOf="@+id/speedtest_internet_line"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/speedtest_wan_dl_title"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/internet_dl_speed"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/speedtest_internet_dl_speed"
                                    android:layout_centerInParent="true"
                                    android:textStyle="bold"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/speedtest_dl_pb_internet"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/internet_ul_speed"
                                android:id="@+id/speedtest_wan_ul_title"
                                android:layout_marginTop="15dp"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/speedtest_internet_ul_speed"
                                    android:layout_centerInParent="true"
                                    android:textStyle="bold" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/speedtest_ul_pb_internet"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Router -->
                    <ImageView
                        android:id="@+id/speedtest_router_imageView"
                        android:layout_width="116dp"
                        android:layout_height="67dp"
                        android:src="@drawable/router"
                        android:contentDescription="Router"
                        android:layout_gravity="center_horizontal" />

                    <RelativeLayout
                        android:id="@+id/speedtest_connection_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <View
                            android:id="@+id/speedtest_router_lan_path_vertical"
                            android:layout_width="3dp"
                            android:layout_height="130dp"
                            android:background="@color/network_link_color"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerInParent="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/speedtest_router_lan_path_vertical"
                            android:layout_toEndOf="@+id/speedtest_router_lan_path_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/speedtest_lan_title"
                                android:text="@string/wifi_speed" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/speedtest_wifi_speed"
                                    android:layout_centerInParent="true"
                                    android:textStyle="bold"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/speedtest_pb_wifi"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/wifi_efficiency"
                                android:id="@+id/speedtest_wifi_efficiency_title"
                                android:layout_marginTop="15dp"
                                android:visibility="gone"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/speedtest_wifi_efficiency"
                                    android:layout_centerInParent="true"
                                    android:textStyle="bold" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/speedtest_pb_wifi_efficiency"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/speedtest_connection_devices"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_action_device_devices2"
                        android:contentDescription="Devices" />

                </LinearLayout>
            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <!-- Notice -->
        <TextView
            android:id="@+id/router_speedtest_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="false"
            android:maxLines="2"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:background="@color/jetstream_speed_test_background"
            android:layout_gravity="center_horizontal|bottom"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>
