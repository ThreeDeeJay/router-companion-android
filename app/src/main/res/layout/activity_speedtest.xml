<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".actions.activity.SpeedTestActivity"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/routerSpeedTestToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/router_speedtest_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_router_management_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tile_network_map_wan_imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/internet"
                android:contentDescription="Internet" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:drawableLeft="@drawable/ic_action_action_done"
                        android:text="Latency"/>

                    <TextView
                        android:id="@+id/tile_network_map_wan_speed_test_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:drawableLeft="@drawable/ic_action_action_done"
                        android:text="-"/>
                </LinearLayout>

                <View
                    android:id="@+id/tile_network_map_wan_path_vertical"
                    android:layout_width="2dp"
                    android:layout_height="35dp"
                    android:background="#ffcccccc" />

            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/internet_line"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/router" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Internet Speed"
                android:id="@+id/textView5"
                android:layout_above="@+id/pb_internet"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/internet"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="-10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/internet_speed"
                android:layout_below="@+id/internet"
                android:layout_toRightOf="@+id/internet"
                android:layout_toEndOf="@+id/internet"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb_internet"
                android:layout_alignBottom="@+id/internet_speed"
                android:layout_toRightOf="@+id/router"
                android:layout_toEndOf="@+id/router"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/router"
                android:src="@drawable/router"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/phone_line"
                android:layout_below="@+id/router"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="LAN Speed"
                android:id="@+id/textView6"
                android:textColor="#ffffff"
                android:layout_above="@+id/pb_wifi"
                android:layout_toRightOf="@+id/router"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="-10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/wifi_speed"
                android:layout_below="@+id/router"
                android:layout_toRightOf="@+id/router"
                android:layout_toEndOf="@+id/router"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb_wifi"
                android:layout_alignBottom="@+id/wifi_speed"
                android:layout_toRightOf="@+id/internet"
                android:layout_toEndOf="@+id/internet"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:layout_below="@+id/phone_line"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_action_devices" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
