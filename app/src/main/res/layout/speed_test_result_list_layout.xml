                        <!--android:text="@string/loading" />-->

                    <!--&lt;!&ndash; Connection DL &ndash;&gt;-->
                    <!--<TextView-->
                        <!--android:id="@+id/speed_test_result_details_connectionDl"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
