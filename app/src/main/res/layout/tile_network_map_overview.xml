<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:baselineAligned="false"
    android:layout_height="match_parent">

    <!--<RelativeLayout-->
        <!--android:id="@+id/tile_network_map_hdr"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingTop="4.0dip">-->

        <TextView
            android:id="@+id/tile_network_map_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/ntm"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <!--<ImageButton-->
            <!--android:id="@+id/tile_network_map_menu"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:contentDescription="@string/menu"-->
            <!--android:src="@drawable/abs__ic_menu_moreoverflow_holo_light"-->
            <!--android:visibility="gone" />-->

    <!--</RelativeLayout>-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_marginTop="8.0dip"
        android:background="#ffcccccc" />

    <!-- Error message placeholder -->
    <TextView
        android:id="@+id/tile_network_map_error"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/error_placeholder"
        android:textColor="@color/ddwrt_purple"
        android:textStyle="bold"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/tile_network_map_gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:columnCount="3"
            android:layout_marginBottom="20dp">

            <!-- Auto-refresh -->
            <TextView
                android:id="@+id/tile_network_map_togglebutton_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_refresh"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tile_network_map_togglebutton_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:text="@string/one_space"
                android:visibility="gone"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/tile_network_map_togglebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="7dp"
                android:checked="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textOff="OFF"
                android:textOn="ON"
                android:visibility="gone"/>

            <!-- Active Clients -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# Active Clients"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:text="@string/one_space" />

            <TextView
                android:id="@+id/tile_network_map_active_clients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:gravity="start"
                android:singleLine="false"
                android:text="@string/loading" />

            <!-- Active DHCP Leases -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Active DHCP Leases"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:text="@string/one_space" />

            <TextView
                android:id="@+id/tile_network_map_active_dhcp_leases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:gravity="start"
                android:singleLine="false"
                android:text="@string/loading" />

            <LinearLayout
                android:layout_columnSpan="3"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tile_network_map_wan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tile_network_map_wan_imageView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/internet"
                        android:contentDescription="Router" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="WAN (Internet)"
                        android:layout_marginTop="25dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tile_network_map_router"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tile_network_map_router_wan_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="end"
                        android:text="WAN IP: 216.58.211.78"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">

                        <TextView
                            android:id="@+id/tile_network_map_router_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_gravity="end"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="-"/>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="71dp"
                            android:src="@drawable/router"
                            android:layout_gravity="end"
                            android:contentDescription="Router" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tile_network_map_router_lan_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="end"
                        android:text="LAN IP: 172.17.17.254"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tile_network_map_wan_lan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:id="@+id/tile_network_map_wan_lan_textView"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:background="@drawable/simple_circle_gradient"
                        android:gravity="center"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:text="100"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"/>

                    <TextView
                        android:id="@+id/tile_network_map_wan_lan_textView_devices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="device(s)"/>

                </LinearLayout>

            </LinearLayout>

        </GridLayout>

        <ProgressBar
            android:id="@+id/tile_network_map_loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>