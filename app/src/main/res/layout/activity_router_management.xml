<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="org.rm3l.router_companion.mgmt.RouterManagementActivity">

    <include layout="@layout/activity_router_management_toolbar" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/router_list_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_router_management_activity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/empty_router_list_message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="false"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:drawableTop="@drawable/router_black_and_white"/>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.rm3l.router_companion.widgets.RecyclerViewEmptySupport
                    android:id="@+id/routersListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/router_list_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:clickable="true"
                android:contentDescription="@string/router_add_new"
                android:src="@drawable/ic_plus_white_24dp"
                android:tint="@android:color/white"
                app:elevation="6dp"
                app:fabSize="normal"
                app:layout_anchor="@id/routersListView"
                app:layout_anchorGravity="end|bottom"
                app:layout_behavior="org.rm3l.router_companion.widgets.ScrollAwareFABBehavior"
                app:pressedTranslationZ="12dp"
                android:focusable="true" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>


</LinearLayout>