<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_toolbox_ping"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.74"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4.0dip">

            <TextView
                android:id="@+id/tile_toolbox_abstract_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/ping"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="8.0dip"
            android:background="#ffcccccc" />

        <!-- Error message placeholder -->
        <TextView
            android:id="@+id/tile_toolbox_abstract_error"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/error_placeholder"
            android:textColor="@color/ddwrt_purple"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1.0dip"
            android:weightSum="1">

            <!-- Filter -->
            <org.rm3l.ddwrt.widgets.InstantAutoCompleteTextView
                android:id="@+id/tile_toolbox_abstract_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.02"
                android:drawableBottom="@android:color/holo_blue_dark"
                android:drawableEnd="@drawable/abs__ic_clear_search_api_holo_light"
                android:drawableLeft="@drawable/abs__ic_search_api_holo_light"
                android:drawableRight="@drawable/abs__ic_clear_search_api_holo_light"
                android:drawableStart="@drawable/abs__ic_search_api_holo_light"
                android:hint="@string/ping_edit_text_hint"
                android:imeOptions="actionSearch"
                android:inputType="textCapSentences|textAutoCorrect|textAutoComplete"
                android:maxLines="1" />

            <Button
                android:id="@+id/tile_toolbox_abstract_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbox_ping" />

            <Button
                android:id="@+id/tile_toolbox_abstract_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/cancel" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/tile_toolbox_abstract_content_scrollview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:scrollbars="vertical|horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tile_toolbox_abstract_content"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="bottom"
                    android:maxLength="9000"
                    android:maxLines="200"
                    android:singleLine="false" />

                <ProgressBar
                    android:id="@+id/tile_toolbox_ping_abstract_loading_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>