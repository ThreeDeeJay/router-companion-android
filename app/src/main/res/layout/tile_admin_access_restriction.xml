<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/access_restriction_policy_cardview"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" android:layout_marginBottom="5dp"
	android:layout_marginEnd="7dp" android:layout_marginLeft="7dp"
	android:layout_marginRight="7dp" android:layout_marginStart="7dp"
	android:layout_marginTop="10dp" android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground"
	card_view:cardElevation="6dp" card_view:cardMaxElevation="6dp"
	card_view:cardPreventCornerOverlap="true"
	card_view:contentPaddingBottom="@dimen/activity_vertical_margin"
	card_view:contentPaddingLeft="10dp"
	card_view:contentPaddingRight="@dimen/main_activity_horizontal_margin"
	card_view:contentPaddingTop="@dimen/activity_vertical_margin">

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="3.5"
			android:orientation="vertical">

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView android:id="@+id/avatar"
					android:layout_width="40dp" android:layout_height="40dp"
					android:layout_margin="7dp"
					android:contentDescription="@string/avatar" />

				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="#"
					android:textAppearance="?android:textAppearanceSmall" />

				<TextView
					android:id="@+id/access_restriction_policy_cardview_number"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginEnd="5dp"
					android:layout_marginRight="7dp"
					android:textAppearance="?android:textAppearanceSmall"
					android:textIsSelectable="true" />

				<TextView
					android:id="@+id/access_restriction_policy_cardview_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:textAppearanceLarge"
					android:textIsSelectable="true" />

			</LinearLayout>

			<TableLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp" android:layout_marginEnd="25dp"
				android:layout_marginRight="25dp" android:layout_marginTop="10dp"
				android:orientation="horizontal" android:stretchColumns="*">

				<TableRow android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:id="@+id/access_restriction_policy_cardview_days_sunday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/table_border"
						android:gravity="center_horizontal" android:text="Sun" />

					<TextView
						android:id="@+id/access_restriction_policy_cardview_days_monday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/table_border"
						android:gravity="center_horizontal" android:text="Mon" />

					<TextView
						android:id="@+id/access_restriction_policy_cardview_days_tuesday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/table_border"
						android:gravity="center_horizontal" android:text="Tue" />

					<TextView
						android:id="@+id/access_restriction_policy_cardview_days_wednesday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/table_border"
						android:gravity="center_horizontal" android:text="Wed" />

					<TextView
						android:id="@+id/access_restriction_policy_cardview_days_thursday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/table_border"
						android:gravity="center_horizontal" android:text="Thu" />

					<TextView
						android:id="@+id/access_restriction_policy_cardview_days_friday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/table_border"
						android:gravity="center_horizontal" android:text="Fri" />

					<TextView
						android:id="@+id/access_restriction_policy_cardview_days_saturday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/table_border"
						android:gravity="center_horizontal" android:text="Sat" />

				</TableRow>
			</TableLayout>

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginEnd="5dp"
					android:layout_marginRight="5dp" android:text="Time of Day: " />

				<TextView
					android:id="@+id/access_restriction_policy_cardview_hours"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textIsSelectable="true" />
			</LinearLayout>

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginEnd="5dp"
					android:layout_marginRight="5dp"
					android:text="Internet Access Policy: " />

				<TextView
					android:id="@+id/access_restriction_policy_cardview_internet_policy"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textIsSelectable="true" />
			</LinearLayout>

		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="end"
			android:layout_weight="0.5" android:orientation="vertical">

			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="35dp" android:orientation="horizontal">

				<TextView
					android:id="@+id/access_restriction_policy_cardview_status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingEnd="7dp"
					android:paddingLeft="7dp" android:paddingRight="7dp"
					android:paddingStart="7dp"
					android:textAppearance="?android:textAppearanceSmall"
					android:textColor="@color/white" />

				<!--<androidx.appcompat.widget.SwitchCompat -->
				<!--android:id="@+id/access_restriction_policy_cardview_status" -->
				<!--android:layout_width="wrap_content" -->
				<!--android:layout_height="wrap_content" -->
				<!--android:checked="false" -->
				<!--android:textAppearance="?android:textAppearanceSmall" -->
				<!--android:layout_marginRight="5dp" -->
				<!--android:layout_marginEnd="5dp" -->
				<!--android:textOff="OFF" -->
				<!--android:textOn="ON"/> -->

				<ImageButton
					android:id="@+id/access_restriction_policy_cardview_menu"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:contentDescription="@string/menu"
					android:src="@drawable/abs__ic_menu_moreoverflow_holo_light" />

			</LinearLayout>

			<ImageButton
				android:id="@+id/access_restriction_policy_remove_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|bottom"
				android:background="?android:selectableItemBackground"
				android:contentDescription="Remove"
				android:src="@drawable/ic_action_action_delete" />

		</LinearLayout>

	</LinearLayout>

</androidx.cardview.widget.CardView>