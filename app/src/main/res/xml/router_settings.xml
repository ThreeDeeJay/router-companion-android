    <!-- General -->
    <PreferenceCategory
        android:key="@string/pref_header_general"
        android:title="General">

        <ListPreference
            android:defaultValue="DDWRTSortingStrategy"
            android:entries="@array/pref_sorting_strategy_titles"
            android:entryValues="@array/pref_sorting_strategy_values"
            android:key="sortingStrategy"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_tab_sorting_strategy" />

    </PreferenceCategory>

    <!-- Data & Sync -->
    <PreferenceCategory
        android:key="@string/pref_header_data_sync"
        android:title="Data &amp; Sync">

        <org.rm3l.ddwrt.utils.LongListPreference
            android:defaultValue="30000"
            android:entries="@array/pref_sync_frequency_titles"
            android:entryValues="@array/pref_sync_frequency_values"
            android:key="syncIntervalMillis"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_sync_frequency" />

    </PreferenceCategory>

    <!-- Data & Sync -->
    <PreferenceCategory
        android:key="@string/pref_header_notifications"
        android:title="Notifications">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notifications.enable"
            android:summaryOff="Background Service and notifications disabled. You need to open the app whenever you need it to connect to the Router/"
            android:summaryOn="Background Service enabled. You may get notifications even if you are not using the app."
            android:title="Background Service" />

        <org.rm3l.ddwrt.utils.LongListPreference
            android:defaultValue="30000"
            android:entries="@array/pref_sync_frequency_titles"
            android:entryValues="@array/pref_sync_frequency_values"
            android:key="notifications.syncIntervalMillis"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_sync_frequency" />

        <MultiSelectListPreference
            android:dialogTitle="Select Notifications"
            android:key="notifications.items"
            android:summary=""
            android:title="Notifications"
            android:entries="@array/notifiable_items_list_titles"
            android:entryValues="@array/notifiable_items_list_values"
            android:defaultValue="@array/notifiable_items_list_default_values"/>

    </PreferenceCategory>

</PreferenceScreen>