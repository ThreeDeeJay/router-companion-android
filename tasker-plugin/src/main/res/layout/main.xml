<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.EditActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <!-- Error message placeholder -->
    <TextView
        android:textIsSelectable="true"
        android:id="@+id/error_placeholder"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="Error"
        android:textColor="@color/ddwrt_purple"
        android:textStyle="bold"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/loading_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="false" />

            <LinearLayout
                android:id="@+id/main_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="Select Router"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/select_router_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:imeOptions="flagNoExtractUi" />

                <EditText
                    android:id="@+id/selected_router_variable"
                    android:visibility="gone"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@color/win8_teal"
                    android:gravity="top|start"
                    android:hint="Router Name Tasker Variable"
                    android:text="%router_name"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:lines="1"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/selected_router_uuid"
                    android:visibility="invisible"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="Select Command"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/select_command_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:imeOptions="flagNoExtractUi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/selected_command"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/command_configuration_input"
                    android:visibility="gone"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@color/win8_teal"
                    android:gravity="top|start"
                    android:hint="Configure your command here"
                    android:imeOptions="actionSend"
                    android:inputType="textMultiLine"
                    android:lines="7"
                    android:padding="8dp"
                    android:scrollbars="vertical" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:id="@+id/command_configuration_input_variable"
                    android:checked="false"
                    android:text="Variable"/>


                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="8dip"
                    android:id="@+id/return_output_variable_checkbox"
                    android:checked="false"
                    android:text="Return Output, if possible"/>

                <EditText
                    android:id="@+id/return_output_variable"
                    android:visibility="gone"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="8dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@color/win8_teal"
                    android:gravity="top|start"
                    android:hint="Tasker Variable for Command Output"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:lines="1"
                    android:padding="8dp"/>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>